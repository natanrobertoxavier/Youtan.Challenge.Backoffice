@{
    ViewData["Title"] = "Cadastro de Leilões";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Centered forms -->
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <form id="frmCadastroProduto" class="form-validate-jquery" action="#" novalidate="novalidate">
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <h5 class="panel-title">Cadastro de Leilões</h5>
                        </div>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="form-group">
                                <label>Data do leilão:</label>
                                <input id="txtAuctionDate" name="txtAuctionDate" type="date" class="form-control" style="width: 130px;" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")">
                            </div>

                            <div class="form-group">
                                <label>Nome:</label>
                                <input id="txtAuctionName" name="txtAuctionName" type="text" class="form-control" placeholder="Leilão da Receita Federal">
                            </div>

                            <div class="form-group">
                                <label>Descrição:</label>
                                <input id="txtAuctionDescription" name="txtAuctionDescription" type="text" class="form-control" placeholder="Itens apreendidos na alfândega">
                            </div>

                            <div class="form-group">
                                <div class="form-group">
                                    <label>Endereço:</label>
                                    <input id="txtAuctionAddress" name="txtAuctionAddress" type="text" class="form-control" placeholder="Estrada Doutor Altino Bondesan, 500, Parque de Inovações Tecnológicas – Sala 2108, São José dos Campos – SP – Brasil">
                                </div>
                            </div>

                            <div class="text-right">
                                <button type="button" id="btnAuctionRegistration" onclick="AuctionRegistration()" class="btn btn-primary sweet-btn">
                                    Cadastrar
                                </button>

                                <button type="button" id="btnCancelarCadastroProduto" onclick="GoToHome()" class="btn btn-danger">
                                    Cancelar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- /form centered -->